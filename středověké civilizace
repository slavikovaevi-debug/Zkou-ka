    <script>
        function toggleExpanded(element) {
            // Najdeme timeline-content element
            let content;
            if (element.classList.contains('timeline-content')) {
                content = element;
            } else {
                content = element.parentElement.querySelector('.timeline-content');
            }
            
            const expandedContent = content.querySelector('.expanded-content');
            
            // Zav≈ôeme v≈°echny ostatn√≠ rozbalen√© karty
            document.querySelectorAll('.expanded-content.active').forEach(item => {
                if (item !== expandedContent) {
                    item.classList.remove('active');
                }
            });
            
            // P≈ôepneme stav aktu√°ln√≠ karty
            expandedContent.classList.toggle('active');
            
            // P≈ôid√°me vizu√°ln√≠ efekt pro kliknut√≠
            content.style.transform = 'scale(0.98)';
            setTimeout(() => {
                content.style.transform = '';
            }, 150);
        }

        // Animace p≈ôi naƒçten√≠ str√°nky
        window.addEventListener('load', function() {
            const timelineItems = document.querySelectorAll('.timeline-item');
            timelineItems.forEach((item, index) => {
                setTimeout(() => {
                    item.style.animationDelay = `${index * 0.2}s`;
                }, 100);
            });
        });

        // Plynul√© scrollov√°n√≠ p≈ôi kliknut√≠ na teƒçky
        document.querySelectorAll('.timeline-dot').forEach(dot => {
            dot.addEventListener('click', function(e) {
                e.stopPropagation();
                this.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            });
        });
    </script>
